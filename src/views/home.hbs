<div class="card bg-primary border border-dark border-3 rounded mt-4">
    <div class="card">
     <center><h1>Productos</h1></center>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{ this.id }}</td>
                <td>{{ this.title }}</td>
                <td>{{ this.price }}</td>
                <td>{{ this.stock }}</td>
                <td><img src="{{ this.thumbnail }}" width="50"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

</div>